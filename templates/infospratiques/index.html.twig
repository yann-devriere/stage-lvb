                    initMap('carte');

                            function initMap(lat,lng){

                            const map = L.map('carte').setView([50.6940180068877, 2.64108085743208], 15);

                            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
                            }).addTo(map);

                                    L.marker([50.6940180068877, 2.64108085743208]).addTo(map)
                                        .bindPopup('La salle se trouve ici.')
                                        .openPopup();

                            const layerGroupMarker = L.layerGroup().addTo(map);

                            map.on('click', function (e) {
                                map.setZoom(17);
                                map.setView([e.latlng.lat,e.latlng.lng], 17);

                            });
                        }
                        </script>  

