<script>
const submitbtn = document.getElementById('submitBtn');

function undisabled(){submitbtn.removeAttribute('disabled')}
function disabled(){
    submitbtn.setAttribute('disabled', '')
}
function signin(){
    setTimeout(disabled, 50)
    setTimeout(undisabled, 3000)
}
</script>

