</div>
{{form_end(formNewsletter)}}</div><!--/ subscribe end -->

{% if articlesSlide != null %}
<section id="news" class="news">
<div class="container">
	<div class="row text-center">
		<div class="col-12">
			<h2 class="section-title bleuTitre">Actualités du clubs</h2>
			<h3 class="section-sub-title ">Derniers articles</h3>
		</div>
	</div><!--/ Title row end --><div class="row">
		{% for article in articlesSlide %}

			<div class="col-lg-4 col-md-6 mb-4">
				<div class="latest-post grow">
					<div class="latest-post-media">
						<a href="{{path('article_unique',{nom:article.nom})}}" class="latest-post-img">
							{% set photocrop %}/uploads/{{article.photo}}{% endset %}
							<img loading="lazy" class="img-fluid" src="{{photocrop|imagine_filter('photoArticleHome')}}" alt="img">
						</a>
					</div>
					<div class="post-body">
						{% for catégorie in article.categorie %}
							<a href="{{path('actu',{'categories':catégorie.id})}}" class="me-2 bleuTitre font-weight-light text-decoration-underline" style="font-size:12px;">
								{{catégorie}}
							</a>
						{% endfor %}
						<h4 class="post-title">
							<a href="{{path('article_unique',{nom:article.nom})}}" class="d-inline-block">
								{{article.nom}}</a>
						</h4>
